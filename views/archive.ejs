<%- include('partials/header') %>

<script
  src="http://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>

<nav class="navbar navbar-expand navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="#">Company name</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown">
          Find
        </a>
        <div class="dropdown-menu centered">

      <form class="px-4 py-3" action="/findSapNumber" method="post">
      <input class="form control form-control-sm bottom-margin" name="sapNumber" type="search" placeholder="SAP number" autocomplete="off">
      <button class="btn btn-sm btn-dark my-2 my-sm-0 justified" type="submit">Search</button>
      </form>

      <div class="dropdown-divider"></div>

        <form class="px-4 py-3" action="/findOrderNumber" method="post">
          <input class="form control form-control-sm bottom-margin" name="orderNumber" type="search" placeholder="Order number" autocomplete="off">
          <button class="btn btn-sm btn-dark my-2 my-sm-0 justified" type="submit">Search</button>
        </form>

        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/">Return to current date</a>
      </li>
    </ul>
  </div>
</nav>

<div class="jumbotron text-center my-jumb">
  <div class="container">
    <div class="container">
    <h1 class="display-3">Archived orders:</h1>
    <form class="" action="/archive" method="post">
      <select class="form-control-sm" name="dateSelect" onchange="this.form.submit()">
        <option class="bordered" value=""><%=pickedDate%></option>
        <% dates.forEach(function(dates){ %>
        <option value="<%=dates%>"><%=dates%></option>
        <% }); %>
      </select>
    </form>
    </div>
    <br />
  </div>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">Added at</th>
        <th scope="col">SAP number</th>
        <th scope="col">Order number</th>
        <th scope="col">Delivery time</th>
        <th scope="col">Carrier</th>
        <th scope="col">Comments</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      <% foundOrders.forEach(function(order){ %>
      <tr>
        <td>
          <%=order.timeAdded%>
        </td>
        <td class="tooltip-container">
          <%=order.sapNumber%>
        </td>
          <td>
          <%=order.orderNumber%>
        </td>
        <td>
          <%=order.deliveryTime%>
        </td>
        <td>
          <%=order.carrier%>
        </td>
        <td>
          <%=order.comments%>
        </td>
        <td>
<%=order.orderStatus%>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('partials/footer') %>
